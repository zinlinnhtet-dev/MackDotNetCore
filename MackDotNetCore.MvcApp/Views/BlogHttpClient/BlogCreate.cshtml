<form action="/bloghttpclient/save" method="post">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" name="blog_title" class="form-control w-25">
    </div>
    <div class="mb-3">
        <label class="form-label">Author</label>
        <input type="text" name="blog_authour" class="form-control w-25">
    </div>
    <div class="mb-3">
        <label class="form-label">Content</label>
        <input type="text" name="blog_content" class="form-control w-25">
    </div>
    <a href="/bloghttpclient" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-success">Save</button>
</form>

