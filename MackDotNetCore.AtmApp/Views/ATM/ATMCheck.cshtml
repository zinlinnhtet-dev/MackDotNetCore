<form action="/atm/check" method="get">

	<div class="container-fluid bg-dark shadow d-flex justify-content-start w-full p-5 mt-3">
		<p class="text-white-50 pt-4 pe-2 fw-bold">Fill the Card and  Pin numbers <br />to check the remaining balance.</p>
		<div class="p-3">
			<div class="mb-3">
				<label class="form-label text-white-50">CardNumber</label>
				<input type="text" name="CardNum" class="form-control">
			</div>
			<div class="mb-3">
				<label class="form-label  text-white-50 ">PinNumber</label>
				<input type="text" name="Pin" class="form-control">
			</div>
			<a href="/home" type="button" class="btn btn-secondary">Cancel</a>
			<button type="submit" class="btn btn-success">Check Balance</button>
		</div>
	</div>
</form>
